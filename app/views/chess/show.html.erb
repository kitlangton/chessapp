<div class="container-fluid">

<div class="center">
  <br>
  <div class="logo minimal">
    <%= image_tag('chess_logo_minimal.png')%>
  </div>
  <br>

  <div class="row">

    <div class="col-lg-3 graveyard-container">
        <%= render partial: 'graveyard'%>
    </div>

    <div class="col-sm-6">
      <div class="board-container">
        <%= render partial: 'board'%>
      </div>
    </div>

  </div>
  <%= form_for :move, url: 'move', remote: true, method: :post do |f| %>
  <%= f.hidden_field :from %>
  <%= f.hidden_field :to %>
  <%# <%= f.submit %>

  <% end %>

</div>
<%= audio_tag "swish.mp3", class: "audio-play" %>

</div>
